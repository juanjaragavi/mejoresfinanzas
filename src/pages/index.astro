---
import { Image } from "astro:assets";
import Base from "@/layouts/Base.astro";
import Cta from "@/layouts/components/Cta.astro";
import PaginatedPosts from "@/layouts/components/PaginatedPosts.astro";
import { markdownify, plainify } from "@/lib/utils/textConverter";
import { getEntry, getCollection } from "astro:content";
import { getSinglePage } from "@/lib/contentParser.astro";
import { sortByDate } from "@/lib/utils/sortFunctions";
import type { CollectionEntry } from "astro:content";
import config from "@/config/config.json";
import { BRAND } from "@/config/brand";
import HeroAnimated from "@/components/HeroAnimated";

type HomepageData = {
  banner?: {
    title?: string;
    content?: string;
    image?: string;
    button?: { label: string; link: string; enable: boolean };
  };
  feature?: unknown;
  services?: Array<{
    title?: string;
    content?: string;
    images?: string[];
    button?: { label: string; link: string; enable: boolean };
  }>;
  workflow?: { title?: string; description?: string; image?: string };
  call_to_action?: {
    title?: string;
    content?: string;
    image?: string;
    button?: { label: string; link: string; enable: boolean };
  };
};

const homepageDirect = (await getEntry("homepage", "-index")) as
  | CollectionEntry<"homepage">
  | undefined;
const homepageAll = await getCollection("homepage");
const homepage = homepageDirect ?? homepageAll[0];
const {
  banner,
  services = [],
  workflow,
  call_to_action,
} = (homepage?.data ?? {}) as HomepageData;

// Fetch blog posts for the new sections
const { summary_length } = config.settings;
const posts = (await getSinglePage("personal-finance")) ?? [];
const sortedPosts = posts.length ? sortByDate(posts) : [];
const latestPosts = sortedPosts.slice(0, 3);
const featuredPost = sortedPosts[0] ?? null;
const featuredPosts = sortedPosts.slice(1, 4);
---

<Base>
  <!-- Animated Two-Column Hero -->
  <HeroAnimated
    client:load
    title={banner?.title ?? BRAND.tagline ?? "Slogan or Tagline"}
    contentHtml={banner?.content ? plainify(banner.content) : undefined}
    cta={banner?.button}
    image={banner?.image}
  />

  <!-- Services -->
  {
    services.map((service, index) => {
      const isOdd = index % 2 > 0;
      return (
        <section class={`section ${isOdd && "bg-white"}`}>
          <div class="container">
            <div class="items-center gap-8 md:grid md:grid-cols-2">
              <div class={`service-carousel ${!isOdd && "md:order-2"}`}>
                {(service.images?.length ?? 0) > 1 ? (
                  <div class="swiper">
                    <div class="swiper-wrapper">
                      {service.images?.map((image) => (
                        <div class="swiper-slide">
                          <Image
                            class="mx-auto"
                            src={image}
                            width={538}
                            height={328}
                            alt={service?.title ?? "Service image"}
                          />
                        </div>
                      ))}
                    </div>
                    <div class="pagination" />
                  </div>
                ) : (
                  service.images?.[0] && (
                    <Image
                      class="mx-auto"
                      src={service.images[0]}
                      width={538}
                      height={328}
                      alt={service?.title ?? "Service image"}
                    />
                  )
                )}
              </div>

              {/* Content */}
              <div
                class={`service-content mt-5 md:mt-0 ${!isOdd && "md:order-1"}`}
              >
                <h2 class="font-bold leading-[40px]">{service?.title}</h2>
                <p class="mt-4 mb-2">{service?.content}</p>
                {service?.button?.enable && (
                  <a
                    href={service?.button.link}
                    class="cta-link inline-flex items-center text-primary"
                  >
                    {service?.button.label}
                    <img
                      class="ml-1"
                      src="/images/arrow-right.svg"
                      width={18}
                      height={14}
                      alt="arrow"
                    />
                  </a>
                )}
              </div>
            </div>
          </div>
        </section>
      );
    })
  }
  <!-- /End service -->

  <!-- Latest News Section -->
  {
    latestPosts.length > 0 && (
      <section class="section">
        <div class="container">
          <h2 class="font-bold text-[44px] leading-[52px] mb-8">Latest News</h2>
          <p class="text-lg mb-12">
            Stay informed with our latest financial insights and tips to help
            you make smarter money decisions.
          </p>

          <PaginatedPosts
            posts={latestPosts}
            section="personal-finance"
            totalPages={1}
            currentPage={1}
          />

          <div class="mt-8">
            <a href="/personal-finance" class="btn btn-primary">
              View All Articles
            </a>
          </div>
        </div>
      </section>
    )
  }

  <!-- Featured Article Section -->
  {
    featuredPost && (
      <section class="section bg-light">
        <div class="container">
          <h2 class="font-bold text-[44px] leading-[52px] mb-8">
            Featured Article
          </h2>
          <p class="text-lg mb-12">
            Dive deep into our most impactful financial guide this month.
          </p>

          <div class="row">
            <div class="col-12">
              <div class="row items-center">
                <div class="md:col-6">
                  {featuredPost?.data?.image && (
                    <Image
                      class="rounded-lg"
                      src={featuredPost.data.image}
                      alt={featuredPost.data.title}
                      width={600}
                      height={400}
                    />
                  )}
                </div>
                <div class="md:col-6 text-left">
                  <h3 class="h2 mb-4 mt-4 md:mt-0 text-left">
                    <a
                      href={`/personal-finance/${featuredPost.id}`}
                      class="block hover:text-primary"
                    >
                      {featuredPost.data.title}
                    </a>
                  </h3>
                  <p
                    class="text-lg leading-relaxed mb-6 line-clamp-3 text-left"
                    set:html={plainify(
                      featuredPost.body?.slice(0, summary_length * 2) || "",
                    )}
                  />
                  <a
                    class="btn btn-primary"
                    href={`/personal-finance/${featuredPost.id}`}
                    rel=""
                  >
                    Read Full Article
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    )
  }

  <!-- Featured Posts Section -->
  {
    featuredPosts.length > 0 && (
      <section class="section">
        <div class="container">
          <h2 class="font-bold text-[44px] leading-[52px] mb-8">
            Featured Posts
          </h2>
          <p class="text-lg mb-12">
            Explore our hand-picked articles to help you build better financial
            habits.
          </p>

          <PaginatedPosts
            posts={featuredPosts}
            section="personal-finance"
            totalPages={1}
            currentPage={1}
          />

          <a href="/personal-finance" class="btn btn-outline-primary">
            Browse More Articles
          </a>
        </div>
      </section>
    )
  }

  <!-- Workflow -->
  <section class="section pb-0">
    <div class="container text-center">
      <!-- Mobile-first layout: Image first, then text content -->
      <div class="flex flex-col">
        <!-- Image: Shows first on mobile, second on desktop -->
        <div class="order-1 md:order-2 my-8 md:mb-0">
          {
            workflow?.image && (
              <Image
                src={workflow.image}
                alt="workflow image"
                width={1920}
                height={414}
              />
            )
          }
        </div>

        <!-- Text Content: Shows second on mobile, first on desktop -->
        <div class="order-2 md:order-1 mb-8">
          <h2
            class="mx-auto max-w-[700px] font-bold leading-[44px]"
            set:html={workflow?.title}
          />
          <p
            class="mx-auto mt-3 max-w-[600px]"
            set:html={workflow?.description}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <Cta cta={call_to_action} />
</Base>

<script>
  import { Swiper } from "swiper";
  import "swiper/css";
  import "swiper/css/pagination";
  import { Autoplay, Pagination } from "swiper/modules";

  // astro:page-load event is fired when the page is loaded
  document.addEventListener("astro:page-load", () => {
    new Swiper(".service-carousel .swiper", {
      modules: [Pagination, Autoplay],
      // autoplay: {
      //   delay: 3000,
      // },
      pagination: {
        type: "bullets",
        el: ".service-carousel .pagination",
        clickable: true,
      },
    });
  });
</script>
